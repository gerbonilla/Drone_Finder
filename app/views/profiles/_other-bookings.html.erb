<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <table class="table table-hover">
        <% @bookings.each do |booking| %>
          <% if booking.status == "confirmed" %>
            <thead>
              <tr>
                <th>drone</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th class="row">status:
                  <td>
                    <div class="btn-group">
                      <button class="btn btn-success btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= booking.status %>

                      </button>
                      <div class="dropdown-menu">
                        <%= button_to "confirmed", booking_path(booking), name: "status", method: :patch %>
                        <%= button_to "declined", booking_path(booking), name: "status", method: :patch %>
                        <%= button_to "cancelled", booking_path(booking), name: "status", method: :patch %>
                        <div class="dropdown-divider"></div>
                      </div>
                    </div>
                  </td>
                </th>
              </tr>
              <tr>
                <th class="row">Date:
                  <td><%= booking.start_date %></td>
                </th>
              </tr>
              <tr>
                <th class="row">Price:
                  <td class="row"><%= booking.original_rate %>â‚¬</td>
                </th>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
