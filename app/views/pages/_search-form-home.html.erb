
<form action="/drones" class="form-inline">
  <div class="banner-form-styling">
    <div class="row">
      <div class="col-xs-12 col-md-4 form-group text-right">
        <input type="text" name="address", placeholder="Address" class="form-control" id="adress-input">
      </div>
      <div class="input-daterange input-group col-xs-12 col-md-6 text-left form-group" id="datepicker">
